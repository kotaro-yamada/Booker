<div class="EditTitle">
  <h1>Editing Book</h1>
</div>

<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(@book) do |f| %>
<div class="EditingForm">
	<p>Title</p>
    <%= f.text_field :title%>
</div>
<div class="EditingForm">
    <p>Body</p>
    <%= f.text_area :body%>
</div>
<div class="form-botton">
<%= f.submit 'Update Book'%>
</div>
<% end %>

<p class="link">
	<%= link_to "Show", book_path(@book.id)%>
</p>
<p class="link">|</p>
<p class="link">
<%= link_to "Back", books_path%>
</p>